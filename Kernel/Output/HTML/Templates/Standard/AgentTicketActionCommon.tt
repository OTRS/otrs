                            <div class="Field">
                                <input type="checkbox" id="CreateArticle" name="CreateArticle" value="1" [% IF Data.CreateArticle %] checked="checked"[% END %] />
                            </div>
                            <div class="Clear"></div>
[% END %]
                        </fieldset>
[% RenderBlockStart("InformAdditionalAgents") %]
