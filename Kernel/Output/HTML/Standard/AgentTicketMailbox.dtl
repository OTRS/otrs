<!-- dtl:block:NavBar -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
  <tr>
    <td align="center" class="mainhead">
      $Env{"Box0"}$Text{"Mailbox"}: $Text{"$Data{"ViewType"}"}$Env{"Box1"}
    </td>
  </tr>
  <tr>
    <td class="menu">
      $Text{"Tickets"}: $Data{"Result"} $Text{"of"} $Data{"TotalHits"} -
      $Text{"Page"}: $Data{"SiteNavBar"} - $Text{"Filter"}:
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=All&SortBy=$Data{"SortBy"}&OrderBy=$Data{"OrderBy"}" onmouseover="window.status='$JSText{"All messages"} ($Data{"All"})'; return true;" onmouseout="window.status='';">$Text{"All"} ($Data{"All"})</a>
#      -
#      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Open&SortBy=$Data{"SortBy"}&OrderBy=$Data{"OrderBy"}" onmouseover="window.status='$JSText{"Open messages"} ($Data{"Open"})'; return true;" onmouseout="window.status='';">$Text{"Old messages"} ($Data{"Open"})</a>
      -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=New&SortBy=$Data{"SortBy"}&OrderBy=$Data{"OrderBy"}" onmouseover="window.status='$JSText{"New messages"} ($Data{"New"})'; return true;" onmouseout="window.status='';">$Text{"New messages"} ($Data{"New"})</a>
      -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Pending&SortBy=$Data{"SortBy"}&OrderBy=$Data{"OrderBy"}" onmouseover="window.status='$JSText{"Pending messages"} ($Data{"Pending"})'; return true;" onmouseout="window.status='';">$Text{"Pending"} ($Data{"Pending"})</a>
      -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Reminder&SortBy=$Data{"SortBy"}&OrderBy=$Data{"OrderBy"}" onmouseover="window.status='$JSText{"Reminder messages"} ($Data{"Reminder"})'; return true;" onmouseout="window.status='';">$Text{"Reminder"} ($Data{"Reminder"})</a>
      <br>
      $Text{"Sort by"}:
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=Age">$Text{"Age"}</a> -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=Queue">$Text{"Queue"}</a> -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=Priority&OrderBy=Down">$Text{"Priority"}</a> -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=CustomerID">$Text{"CustomerID"}</a>
      | $Text{"Order"}:
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=$Data{"SortBy"}&OrderBy=Up">$Text{"up"}</a> -
      <a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=$Env{"Subaction"}&SortBy=$Data{"SortBy"}&OrderBy=Down">$Text{"down"}</a>
    </td>
  </tr>
</table>
<!-- dtl:block:NavBar -->
<!-- dtl:block:Ticket -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
  <tr>
<!-- dtl:block:Bulk -->
    <td width="1%" class="mainhead">
      <form name="abulk$Data{"Counter"}">
        <input type="checkbox" name="Selected" value="1" onclick="BulkChangeSelected($Data{"TicketID"},$Data{"Counter"})">
      </form>
    </td>
<!-- dtl:block:Bulk -->
    <td align="left" width="65%" class="mainhead">
      $Env{"Box0"}$Config{"Ticket::Hook"}: $Data{"TicketNumber"}$Env{"Box1"}
<!-- dtl:block:Title-->
      $QData{"Title","60"}
<!-- dtl:block:Title-->
      <font color="red">$Text{"$Data{"Message"}"}</font>
    </td>
    <td align="right" width="34%" class="mainhead">
      $Env{"Box0"}$Text{"Age"}: $Data{"Age"}$Env{"Box1"}
    </td>
  </tr>
</table>
<table border="0" width="100%" cellspacing="0" cellpadding="3">
  <tr>
    <td width="65%" class="menu">
<!-- dtl:block:Menu -->
<!-- dtl:block:MenuItemSplit -->
      -
<!-- dtl:block:MenuItemSplit -->
<!-- dtl:block:MenuItem -->
      <a href="$Env{"Baselink"}$Data{"Link"}" $Data{"LinkParam"} onmouseover="window.status='$JSText{"$QData{"Name"}"}'; return true;" onmouseout="window.status='';" class="menuitem" title="$Text{"$QData{"Description"}"}">$Text{"$QData{"Name"}"}</a>
<!-- dtl:block:MenuItem -->
<!-- dtl:block:Menu -->
    </td>
    <td align="right" width="34%" class="menu">
      <table border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td class="mainkey">$Text{"Created"}:</td>
          <td class="mainvalue"> $TimeLong{"$Data{"Created"}"}</td>
        </tr>
      </table>
    </td>
  </tr>
</table>
