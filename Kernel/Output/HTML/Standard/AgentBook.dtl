<!-- start addressbook form -->
<div class="WidgetPopup">
    <div class="Content">
        <h1>$Text{"Address Book"}</h1>
        <form id="AdressBook" action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data">
            <fieldset class="TableLike SpacingTop">
                <input type="text" name="Search" id="Search" value="" class="W75pc" />
                <input class="button" type="submit" value="$Text{"Search"}"/>
            </fieldset>
<!-- dtl:block:SearchResult -->
            <table id="SearchResult" class="DataTable SpacingTop">
                <thead>
                    <tr>
                        <th>$Text{"Name"}</th>
                        <th>$Text{"An"}</th>
                        <th>$Text{"Cc"}</th>
                        <th>$Text{"Bcc"}</th>
                    </tr>
                </thead>
                <tbody>
<!-- dtl:block:Row -->
                    <tr id="Row$QData{"Count"}">
                        <td>$QData{"Name"}</td>
                        <td><a href="" rel="To" title="$Text{"Add mail adress %s to the To field", "$QData{"Email"}"}">$Text{"To"}</a></td>
                        <td><a href="" rel="Cc" title="$Text{"Add mail adress %s to the Cc field", "$QData{"Email"}"}">$Text{"Cc"}</a></td>
                        <td><a href="" rel="Bcc" title="$Text{"Add mail adress %s to the Bcc field", "$QData{"Email"}"}">$Text{"Bcc"}</a></td>
                    </tr>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.Data.Set($('#Row$QData{"Count"}'), 'Email', '$QData{"Email"}');
//]]></script>
<!--dtl:js_on_document_complete-->
<!-- dtl:block:Row -->
                </tbody>
            </table>
<!-- dtl:block:SearchResult -->
            <input type="hidden" name="Action" value="AgentBook" />
            <fieldset class="TableLike SpacingTop">
                <label for="To">$Text{"To"}:</label>
                <div class="Field">
                    <input type="text" name="To" id="To" value="$QData{"To"}" class="W75pc" />
                </div>
                <div class="Clear"></div>
                <label for="Cc">$Text{"Cc"}:</label>
                <div class="Field">
                    <input type="text" name="Cc" id="Cc" value="$QData{"Cc"}" class="W75pc" />
                </div>
                <div class="Clear"></div>
                <label for="Bcc">$Text{"Bcc"}:</label>
                <div class="Field">
                    <input type="text" name="Bcc" id="Bcc" value="$QData{"Bcc"}" class="W75pc" />
                </div>
                <div class="Clear"></div>
                <button type="button" id="Apply" value="$Text{"Apply"}">$Text{"Apply"}</button>
                <button type="button" id="Cancel" value="$Text{"Cancel"}">$Text{"Cancel"}</button>
            </fieldset>
        </form>
    </div>
</div>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.Agent.TicketAction.InitAdressBook();
//]]></script>
<!--dtl:js_on_document_complete-->
