<table border="0" width="100%" cellspacing="0" cellpadding="3">
<tr>
  <td class="mainhead">
    $Env{"Box0"}$Text{"Change owner of ticket"}: $Data{"TicketNumber"}$Env{"Box1"}
  </td>
</tr>
<tr>
  <td class="menu">
    <a href="$Env{"Baselink"}$Env{"LastScreenView"}" onmouseover="window.status='$Text{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
  </td>
</tr>
<tr>
  <td class="mainbody">

  <br>

  <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="owner">
  <input type="hidden" name="Action" value="$Env{"Action"}">
  <input type="hidden" name="Subaction" value="Update">
  <input type="hidden" name="TicketID" value="$Data{"TicketID"}">

  <table border="0" width="700" align="center" cellspacing="0" cellpadding="4">
  <tr>
    <td colspan="2" class="contenthead">$Text{"Options"}</td>
  </tr>
  <tr>
  <td class="contentbody">
    <table border="0" width="100%">
      <tr>
        <td width="18%" class="contentkey">$Text{"New Owner"}:</td>
        <td width="2%" class="contentvalue"><input type="radio" name="UserSelection" value="New" checked="checked"></td>
        <td width="80%" class="contentvalue">$Data{"OptionStrg"}</td>
      </tr>
      <tr>
        <td class="contentkey">$Text{"Previous Owner"}:</td>
        <td class="contentvalue"><input type="radio" name="UserSelection" value="Old"></td>
        <td class="contentvalue">$Data{"OldUserStrg"}</td>
      </tr>
      <tr>
        <td class="contentkey">$Text{"Message for new Owner"}:</td>
        <td class="contentvalue"></td>
        <td class="contentvalue"><textarea name="Comment" rows="12" cols="$Config{"Ticket::Frontend::TextAreaNote"}" wrap="$Env{"BrowserWrap"}"></textarea></td>
      </tr>
<!-- dtl:block:NextState -->
      <tr>
        <td class="contentkey">$Text{"Next ticket state"}:</td>
        <td class="contentvalue"></td>
        <td class="contentvalue">$Data{"NextStatesStrg"}</td>
      </tr>
#      <tr>
#        <td class="contentkey">$Text{"Pending date"}:</td>
#        <td class="contentvalue"></td>
#        <td class="contentvalue">$Data{"DateString"} <font color="red" size="-2">$Text{"$Data{"Date invalid"}"}</font></td>
#      </tr>
<!-- dtl:block:NextState -->
    </table>
      </td>
    </tr>
    <tr>
      <td class="contentfooter">
        <input class="button" accesskey="g" type="submit" value="$Text{"update"}">
      </td>
    </tr>
    </table>
    </form>

    <br>

  </td>
</tr>
</table>
<!-- end form -->
