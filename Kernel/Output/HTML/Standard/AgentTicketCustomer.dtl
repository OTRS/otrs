$Include{"AgentCustomerSearch"}

<!-- dtl:block:Customer -->
<form action="$Env{"CGIHandle"}" method="post" name="compose" class="Validate">
    <input type="hidden" name="Action" value="$Env{"Action"}"/>
    <input type="hidden" name="Subaction" value="Update"/>
    <input type="hidden" name="TicketID" value="$QData{"TicketID"}"/>
    <input type="hidden" name="SelectedCustomerUser" id="SelectedCustomerUser" value=""/>

    <div class="WidgetPopup ARIARoleMain">
        <div class="Header">
            <h1>$Text{"Change customer of ticket"}: $QData{"TicketNumber"} - $QData{"Title","60"}</h1>
            <p>
                <a class="CancelClosePopup" href="#">$Text{"Cancel & close window"}</a>
            </p>
        </div>

        <div class="Content">
            <div class="LayoutFixedSidebar SidebarLast">
                <div id="CustomerInfo" class="SidebarColumn WidgetSimple">
                    <div class="Header">
                        <h2>$Text{"Customer Data"}: $QData{"CustomerID"}</h2>
                    </div>
                    <div class="Content">
                        $Data{"Table"}
                    </div>
                </div>

                <div class="ContentColumn">
                    <div class="Header">
                        <h2>$Text{"Options"}</h2>
                    </div>
                    <div class="Content">
                        <p>$Text{"Set customer user and customer id of a ticket"}:</p>
                        <fieldset class="TableLike">
                            <label for="CustomerAutoComplete">$Text{"Customer user"}:</label>
                            <div class="Field">
                                <input id="CustomerAutoComplete" type="text" name="CustomerUserID" value="$QData{"CustomerUserID"}" class="W75pc AutocompleteOff Validate_Required $QData{"CustomerUserIDInvalid"}"/>
                                <div id="CustomerAutoCompleteError" class="TooltipErrorMessage"><p>$Text{"The customer is required!"}</p></div>
                                <div id="CustomerAutoCompleteServerError" class="TooltipErrorMessage"><p>$Text{"The customer is required!"}</p></div>
                            </div>
                            <div class="Clear"></div>

                            <label for="CustomerID">$Text{"CustomerID"}:</label>
                            <div class="Field">
                                <input type="text" id="CustomerID" name="CustomerID" value="$QData{"CustomerID"}" class="W50pc Validate_Required $QData{"CustomerIDInvalid"}"/>
                                <div id="CustomerIDError" class="TooltipErrorMessage"><p>$Text{"The customer id is required!"}</p></div>
                                <div id="CustomerIDServerError" class="TooltipErrorMessage"><p>$Text{"The customer id is required!"}</p></div>
                            </div>
                            <div class="Clear"></div>
                            <div class="Field SpacingTop">
                                <button class="Primary" id="submit" accesskey="g" type="submit" value="$Text{"Submit"}">$Text{"Submit"}</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="Clear"></div>
            </div>

            <div id="CustomerTickets"></div>
        </div>
        <div class="Footer">&nbsp;</div>
    </div>
</form>
<!-- dtl:block:Customer -->
